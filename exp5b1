}

//Derived class for Auto LPG Gas
class AutoLPGGas extends exp5b {
 public AutoLPGGas(String state) {
     fuel_name = "Auto LPG Gas";
     this.state = state;
     switch (state) {
         case "Tamil Nadu":
             cost = 70.33;
             break;
         case "Kerala":
             cost = 71.27;
             break;
         case "Karnataka":
             cost = 72.08;
             break;
         default:
             cost = 0;
             break;
     }
 }
}

