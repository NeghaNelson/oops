package Java;

import java.util.Scanner;

//Super class
class exp5b {
 protected String fuel_name;
 protected String state;
 protected double cost;

 public void calculateCost(double liters) {
     double total_cost = liters * cost;
     System.out.printf("Total cost for %.2f liters: â‚¹%.2f\n", liters, total_cost);
 }
}


class Petrol extends exp5b {
 public Petrol(String state) {
     fuel_name = "Petrol";
     this.state = state;
     switch (state) {
         case "Tamil Nadu":
             cost = 97.46;
             break;
         case "Kerala":
             cost = 98.35;
             break;
         case "Karnataka":
             cost = 99.61;
             break;
         default:
             cost = 0;
             break;
     }
 }
}

//Derived class for Diesel
class Diesel extends exp5b {
 public Diesel(String state) {
     fuel_name = "Diesel";
     this.state = state;
     switch (state) {
         case "Tamil Nadu":
             cost = 96.08;
             break;
         case "Kerala":
             cost = 97.37;
             break;
         case "Karnataka":
             cost = 98.61;
             break;
         default:
             cost = 0;
             break;
     }
 }
}

//Derived class for Kerosene
